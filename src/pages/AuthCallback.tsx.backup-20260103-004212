/*
 * File: AuthCallback.tsx
 * Path: src/pages/AuthCallback.tsx
 * Description: Post-confirm redirect landing. Matches AQUORIX auth UI and routes via /api/v1/me.
 * Author: AQUORIX Engineering
 * Created: 2025-12-31
 * Version: 1.0.1
 * 
 * Last Updated: 2025-12-31
 * 
 * Change Log:
 * - 2026-02-01 - v1.0.1 - The user confirms email → lands on your callback → routes to onboarding/dashboard.
 * 
 */

import React, { useEffect, useState } from 'react';
import { useNavigate } from 'react-router-dom';
import { supabase } from '../lib/supabaseClient';
import { getUserRole } from '../utils/getUserRole';
import '../styles/Auth.css';

const AuthCallback: React.FC = () => {
  const navigate = useNavigate();
  const [title, setTitle] = useState('Finishing sign-in…');
  const [message, setMessage] = useState('Please wait while we verify your session.');

  useEffect(() => {
    let isMounted = true;

    const run = async () => {
      try {
        const { data } = await supabase.auth.getSession();
        const session = data?.session;

        if (!session?.user?.id) {
          if (!isMounted) return;
          setTitle('Email confirmed');
          setMessage('Please sign in to continue.');
          setTimeout(() => navigate('/login', { replace: true }), 900);
          return;
        }

        const routing = await getUserRole(session.user);

        if (!isMounted) return;
        setTitle('Success');
        setMessage('Redirecting…');

        setTimeout(() => {
          navigate(routing.redirect || '/dashboard', { replace: true });
        }, 350);

      } catch (err: any) {
        console.error('[AuthCallback] error:', err);
        if (!isMounted) return;
        setTitle('Sign-in problem');
        setMessage('We could not finish sign-in. Please sign in again.');
        setTimeout(() => navigate('/login', { replace: true }), 1200);
      }
    };

    run();

    return () => {
      isMounted = false;
    };
  }, [navigate]);

  return (
    <div style={{
      display: 'flex',
      minHeight: 540,
      borderRadius: 12,
      overflow: 'hidden',
      background: '#fff',
      boxShadow: '0 2px 16px rgba(0,0,0,0.04)',
      marginTop: 40,
      maxWidth: 800,
      margin: '40px auto 0'
    }}>
      {/* Left Branding Panel */}
      <div style={{
        flex: 1,
        background: 'linear-gradient(135deg, #2574d9 0%, #0a3167 100%)',
        display: 'flex',
        flexDirection: 'column',
        alignItems: 'center',
        justifyContent: 'center'
      }}>
        <img
          src="/aqx-ctd-logo.svg"
          alt="AQUORIX Logo"
          style={{ width: 140, height: 140, marginBottom: 18 }}
        />
        <div style={{ color: '#fff', fontWeight: 700, fontSize: 18, letterSpacing: 0.4 }}>Command the Depths</div>
      </div>

      {/* Right Panel */}
      <div style={{
        flex: 1,
        background: '#fff',
        padding: '36px 32px',
        display: 'flex',
        flexDirection: 'column',
        justifyContent: 'center'
      }}>
        <div style={{
          fontWeight: 800,
          fontSize: 24,
          color: '#0a3167',
          marginBottom: 10,
          textAlign: 'center'
        }}>
          {title}
        </div>

        <div style={{
          color: '#334155',
          fontSize: 15,
          marginBottom: 18,
          textAlign: 'center',
          lineHeight: 1.5
        }}>
          {message}
        </div>

        <div style={{
          width: '100%',
          height: 10,
          background: '#eef2ff',
          borderRadius: 999,
          overflow: 'hidden'
        }}>
          <div style={{
            width: '65%',
            height: '100%',
            background: '#2574d9',
            borderRadius: 999,
            transition: 'width 250ms ease'
          }} />
        </div>

        <div style={{ textAlign: 'center', marginTop: 18, fontSize: 13, color: '#64748b' }}>
          If this takes more than a few seconds, go to <a href="/login" style={{ color: '#2574d9', textDecoration: 'none', fontWeight: 600 }}>Sign In</a>.
        </div>
      </div>
    </div>
  );
};

export default AuthCallback;