/* ------------------------------------------------------------
   Phase C.1 Parity: MVP "sidebar-item" pill layout
   React uses: .aqx-sidenav__link / __icon / __label
------------------------------------------------------------ */

/* Ensure list doesn't center items */
.aqx-sidenav__list {
  padding: 8px 0 16px;
  margin: 0;
  list-style: none;
}

/* The clickable pill (MVP .sidebar-item) */
.aqx-sidenav__link {
  display: flex;
  align-items: center;
  justify-content: flex-start;  /* KEY: left align */
  gap: 10px;                    /* MVP */
  padding: 8px 14px;            /* MVP */
  margin: 4px 10px;             /* MVP */
  border-radius: 6px;           /* MVP */
  text-decoration: none;
  color: #ffffff;
  font-size: 14px;
  background: transparent;
  border: none;
  width: calc(100% - 20px);     /* matches margin left+right (10px + 10px) */
  box-sizing: border-box;
  transition: background 0.15s ease, color 0.15s ease;
}

/* Hover + Active parity (use same values as your HTML prototype tokens) */
.aqx-sidenav__link:hover {
  background: rgba(240, 249, 255, 0.18); /* MVP --sidebar-pill-hover */
}

.aqx-sidenav__item.is-active .aqx-sidenav__link {
  background: rgba(240, 249, 255, 0.32); /* MVP --sidebar-pill-active */
  color: #ffffff;
}

/* Icon sizing parity */
.aqx-sidenav__icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 18px;
}

.aqx-sidenav__icon svg,
